---
import IconArrowNarrowUp from "@/assets/icons/IconArrowNarrowUp.svg";
---

<button
  data-button="back-to-top"
  data-btt-static
  class="group inline-flex items-center gap-2 px-3 py-2 font-mono text-sm text-foreground hover:text-accent focus-visible:outline-none"
>
  <IconArrowNarrowUp class="inline-block size-4 group-hover:text-accent" />
  <span class="group-hover:text-accent">Back To Top</span>
</button>

<script is:inline data-astro-rerun>
  function initializeBackToTopStaticButton() {
    const backToTopBtn = document.querySelector("[data-button='back-to-top']");
    if (!backToTopBtn) return;

    backToTopBtn.addEventListener("click", () => {
      // Instant jump to the top for consistent behavior
      window.scrollTo(0, 0);
    });
  }
  initializeBackToTopStaticButton();
</script>
