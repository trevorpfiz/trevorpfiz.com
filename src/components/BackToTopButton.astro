---
import IconArrowNarrowUp from "@/assets/icons/IconArrowNarrowUp.svg";
---

<div class="mt-8 flex w-full items-center justify-center" data-btt-static>
  <button
    data-button="back-to-top"
    class="inline-flex items-center gap-2 rounded-md border border-muted bg-background/70 px-3 py-2 text-sm font-medium text-foreground shadow-sm backdrop-blur hover:opacity-90 focus-visible:outline-none"
  >
    <IconArrowNarrowUp class="inline-block size-4" />
    Back To Top
  </button>
</div>

<script is:inline data-astro-rerun>
  function initializeBackToTopStaticButton() {
    const backToTopBtn = document.querySelector("[data-button='back-to-top']");
    if (!backToTopBtn) return;

    backToTopBtn.addEventListener("click", () => {
      // Instant jump to the top for consistent behavior
      window.scrollTo(0, 0);
    });
  }
  initializeBackToTopStaticButton();
</script>
