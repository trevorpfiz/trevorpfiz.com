---
import IconX from "@/assets/icons/IconX.svg";
import IconMoon from "@/assets/icons/IconMoon.svg";
import IconSunHigh from "@/assets/icons/IconSunHigh.svg";
import IconMenuDeep from "@/assets/icons/IconMenuDeep.svg";
import { SITE } from "@/config";

export type Props = object;

// Keep for potential future use
void Astro.url;
---

<header id="site-header">
  <a
    id="skip-to-content"
    href="#main-content"
    class="absolute start-16 -top-full z-50 bg-background px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
  >
    Skip to content
  </a>
  <div
    id="nav-container"
    class="mx-auto flex max-w-app flex-col items-center justify-between sm:flex-row"
  >
    <div
      id="top-nav-wrap"
      class="relative flex w-full items-center justify-between bg-background p-4 sm:py-6"
    >
      <a
        href="/"
        class="my-auto py-1 text-xl leading-8 font-semibold whitespace-nowrap sm:text-2xl sm:leading-none"
      >
        {SITE.title}
      </a>
      <nav
        id="nav-menu"
        class="flex w-full flex-row items-center justify-end sm:ms-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0"
      >
        <!-- TOC toggle button (mobile/tablet only - hidden on lg+) -->
        <button
          id="menu-btn"
          class="focus-outline z-10 p-2 lg:hidden"
          aria-label="Open Menu"
          aria-expanded="false"
          aria-controls="post-toc-mobile"
        >
          <IconX id="close-icon" class="hidden" />
          <IconMenuDeep id="menu-icon" />
        </button>
        {
          SITE.lightAndDarkMode && (
            <button
              id="theme-btn"
              class="focus-outline relative size-10 p-3 sm:size-8 sm:p-2 hover:[&>svg]:stroke-accent"
              title="Toggles light & dark"
              aria-label="auto"
              aria-live="polite"
            >
              <IconMoon class="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
              <IconSunHigh class="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
            </button>
          )
        }
      </nav>
    </div>
  </div>
  <!-- <Hr /> -->
</header>

<script>
  function toggleNav() {
    const menuBtn = document.querySelector("#menu-btn");
    const menuIcon = document.querySelector("#menu-icon");
    const closeIcon = document.querySelector("#close-icon");
    const postTocMobile =
      document.querySelector<HTMLDivElement>("#post-toc-mobile");

    if (!menuBtn || !menuIcon || !closeIcon) return;

    menuBtn.addEventListener("click", () => {
      const openMenu = menuBtn.getAttribute("aria-expanded") === "true";

      menuBtn.setAttribute("aria-expanded", openMenu ? "false" : "true");
      menuBtn.setAttribute("aria-label", openMenu ? "Open Menu" : "Close Menu");

      postTocMobile?.classList.toggle("hidden");
      menuIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  }

  toggleNav();

  // Runs on view transitions navigation
  document.addEventListener("astro:after-swap", toggleNav);
</script>
